{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "news/front-layout",
  "version": "1.0.0",
  "title": "News Front Layout",
  "category": "news",
  "icon": "layout",
  "description": "Display news articles in a hero-list layout with customizable hero template.",
  "keywords": ["news", "articles", "layout", "hero", "list", "front", "query"],
  "textdomain": "news",
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "render": "file:./render.php",
  "attributes": {
    "postId": {
      "type": "number"
    },
    "postType": {
      "type": "string",
      "default": "news"
    },
    "position": {
      "type": "string",
      "default": "hero"
    },
    "postsPerPage": {
      "type": "number",
      "default": 10
    },
    "orderBy": {
      "type": "string",
      "default": "date"
    },
    "order": {
      "type": "string",
      "default": "desc"
    },
    "sectionFilter": {
      "type": "string",
      "default": ""
    }
  },
  "providesContext": {
    "news/postId": "postId",
    "news/postType": "postType",
    "news/position": "position",
    "postId": "postId",
    "postType": "postType"
  },
  "usesContext": ["postId", "postType", "position"],
  "supports": {
    "align": ["wide", "full"],
    "spacing": {
      "padding": true,
      "margin": true
    },
    "color": {
      "background": true,
      "text": true
    },
    "innerBlocks": {
      "allowedBlocks": ["news/article-hero-post-template"]
    }
  }
}