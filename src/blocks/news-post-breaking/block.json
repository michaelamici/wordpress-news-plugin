{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "news/post-breaking",
    "version": "1.0.0",
    "title": "Post Breaking",
    "category": "news",
    "icon": "warning",
    "description": "Display breaking news badge within a Query Loop.",
    "keywords": ["breaking", "badge", "news"],
    "textdomain": "news",
    "editorScript": "file:./index.js",
    "supports": {
        "html": false,
        "color": {
            "text": true,
            "background": true
        },
        "typography": {
            "fontSize": true
        }
    },
    "usesContext": ["postId", "postType"],
    "ancestor": ["core/post-template", "core/query"],
    "render": "file:./render.php"
}
