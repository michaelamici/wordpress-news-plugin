{
    "name": "new-baltimore-gazette/news-plugin",
    "description": "Comprehensive WordPress plugin foundation for news management with modern development practices",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "New Baltimore Gazette",
            "email": "dev@newbaltimoregazette.com"
        }
    ],
    "keywords": [
        "wordpress",
        "plugin",
        "news",
        "cms",
        "gutenberg",
        "blocks"
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "NewsPlugin\\": "src/",
            "NewsPlugin\\Admin\\": "src/Admin/",
            "NewsPlugin\\Frontend\\": "src/Frontend/",
            "NewsPlugin\\Common\\": "src/Common/",
            "NewsPlugin\\Blocks\\": "src/Blocks/",
            "NewsPlugin\\Widgets\\": "src/Widgets/",
            "NewsPlugin\\Api\\": "src/Api/",
            "NewsPlugin\\Security\\": "src/Security/",
            "NewsPlugin\\Cache\\": "src/Cache/",
            "NewsPlugin\\Database\\": "src/Database/",
            "NewsPlugin\\Templates\\": "src/Templates/",
            "NewsPlugin\\Assets\\": "src/Assets/",
            "NewsPlugin\\Hooks\\": "src/Hooks/",
            "NewsPlugin\\Utils\\": "src/Utils/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NewsPlugin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "lint": [
            "@phpcs",
            "@phpstan"
        ],
        "fix": "@phpcbf"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
